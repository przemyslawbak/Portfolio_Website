@model LiteratureEditViewModel

@{
    ViewBag.Title = "Edit literature";
    Layout = "_Layout";
}
@Html.AntiForgeryToken()
<!--button-->
<style>
    .about {
        color: gray !important;
    }
</style>
<div class="col-md-4 wrapper">
    <form asp-action="Edit" method="post" asp-antiforgery="true">
        <input type="hidden" asp-for="LiteratureID" />
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <div><span asp-validation-for="Title" class="text-danger"></span></div>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Authors">Authors</label>
            <div><span asp-validation-for="Authors" class="text-danger"></span></div>
            <input asp-for="Authors" class="form-control"></input>
        </div>
        <div class="form-group">
            <label asp-for="Url">Url address</label>
            <div><span asp-validation-for="Url" class="text-danger"></span></div>
            <input asp-for="Url" class="form-control"></input>
        </div>
        <div class="form-group">
            <label asp-for="Technologies">Technologies</label>
            <div><span asp-validation-for="TechnologyIds" class="text-danger"></span></div>
            <select asp-for="TechnologyIds" class="form-control" asp-items="@Model.Technologies"></select>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>