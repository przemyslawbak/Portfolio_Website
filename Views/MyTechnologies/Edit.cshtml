@model Technology

@{
    ViewBag.Title = "Edit technology";
    Layout = "_Layout";
}
@Html.AntiForgeryToken()
<style>
    .technologies {
        color: gray !important;
    }
</style>
<div class="col-md-4">
    <form asp-action="Edit" method="post" asp-antiforgery="true">
        <input type="hidden" asp-for="TechnologyID" />
        <div class="form-group">
            <label asp-for="Name">Technology</label>
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PictureLink">Picture link</label>
            <input asp-for="PictureLink" class="form-control" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>