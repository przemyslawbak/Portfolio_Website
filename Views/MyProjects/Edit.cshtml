@model ProjectViewModel

@{
    ViewBag.Title = "Edit project";
    Layout = "_Layout";
}
@Html.AntiForgeryToken()
<!--button-->
<style>
    .projects {
        color: gray !important;
    }
</style>
<div class="col-md-4">
    <form asp-action="Edit" method="post" asp-antiforgery="true">
        <input type="hidden" asp-for="ProjectID" />
        <div class="form-group">
            <label asp-for="Name">Project</label>
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Comments">Comments</label>
            <div><span asp-validation-for="Comments" class="text-danger"></span></div>
            <textarea asp-for="Comments" class="form-control wysiwyg"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="PictureUrl">Picture url</label>
            <div><span asp-validation-for="PictureUrl" class="text-danger"></span></div>
            <input asp-for="PictureUrl" class="form-control"></input>
        </div>
        <div class="form-group">
            <label asp-for="BackColor">Background color</label>
            <div><span asp-validation-for="BackColor" class="text-danger"></span></div>
            <input asp-for="BackColor" class="form-control"></input>
        </div>
        <div class="form-group">
            <label asp-for="GitHubLink">GitHub url</label>
            <div><span asp-validation-for="GitHubLink" class="text-danger"></span></div>
            <input asp-for="GitHubLink" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="WebLink">Website url</label>
            <div><span asp-validation-for="WebLink" class="text-danger"></span></div>
            <input asp-for="WebLink" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="WorkLogUrl">Work log url</label>
            <div><span asp-validation-for="WorkLogUrl" class="text-danger"></span></div>
            <input asp-for="WorkLogUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="YouTubeUrl">Video url</label>
            <div><span asp-validation-for="YouTubeUrl" class="text-danger"></span></div>
            <input asp-for="YouTubeUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CompletionDate" class="control-label">Completion date</label>
            <div><span asp-validation-for="CompletionDate" class="text-danger"></span></div>
            <input type="date" asp-for="CompletionDate" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Technologies">Technologies</label>
            <div><span asp-validation-for="TechnologyIds" class="text-danger"></span></div>
            <select asp-for="TechnologyIds" class="form-control" asp-items="@Model.Technologies"></select>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a href="javascript:history.go(-1)" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
